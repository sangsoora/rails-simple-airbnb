<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
        <p>All <%= Flat.count %> <% if Flat.count == 1 %> <%= 'flat' %> <% else %> <%= 'flats' %> <% end %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <div class="flat-card">
        <div class="flat-card-image" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')"></div>
      </div>
    </div>
  </div>

</div>
